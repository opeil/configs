[user]
        name = Oleg Peil
        email = Oleg.Peil@gmail.com

[push]
        default = matching

[core]
	excludesfile = /home/opeil/.gitignore

[alias]
    lg = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold black)%aD%C(reset) %C(dim green)(%ar)%C(reset)%C(auto)%d%C(reset)%n''          %C(magenta)%s%C(reset) %C(dim cyan)- %an%C(reset)'
    co = checkout
    ct = commit
    br = branch
    st = status

[init]
	templatedir = ~/.git_template

[color]
  diff = auto
  status = auto
  branch = auto
  interactive = auto
  ui = true
  pager = true

[merge]
    tool = vimdiff
    conflictstyle = diff3

[mergetool]
    prompt = false

